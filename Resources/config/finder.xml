<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- container -->

        <service id="fansible_devops.finder.container" class="Fansible\DevopsBundle\Finder\Helper\FinderContainer" />

        <!-- finder -->

        <service id="fansible_devops.finder.node" class="Fansible\DevopsBundle\Finder\NodeFinder">
            <argument>%kernel.root_dir%</argument>
            <tag name="fansible_devops.finder" />
        </service>

    </services>

</container>
