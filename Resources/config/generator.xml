<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="fansible_devops.generator.twig_helper" class="Fansible\DevopsBundle\Generator\TwigHelper">
            <argument type="service" id="twig" />
            <argument>%kernel.root_dir%</argument>
        </service>

        <service id="fansible_devops.generate.ansible" class="Fansible\DevopsBundle\Generator\AnsibleGenerator"
                 parent="fansible_devops.generator.twig_helper" />

        <service id="fansible_devops.generate.vagrantfile" class="Fansible\DevopsBundle\Generator\VagrantfileGenerator"
                 parent="fansible_devops.generator.twig_helper" />

    </services>

</container>
